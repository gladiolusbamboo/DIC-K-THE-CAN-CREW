<%# @hit_song_infosはsong_idを主キーにしたハッシュ。
    値はLyricモデルの配列 %>
<% if params['searchtype'] == 'ルビ検索' %>
<h2>(ふりがな検索)</h2>
<% end %>
<h1>「<%= params['searchword'] %>」は<%= @hit_song_infos.length %>曲に含まれています</h1>

<% @hit_song_infos.each_with_index do |(key, info_arr), i| %>
  <p><%= i+1 %>.曲名：<%= info_arr[0].song.name %></p>
  <p>収録CD：</p>
  <ul>
  <% info_arr[0].song.cds.each do |cd| %>
    <li><%= cd.name %>(<%= cd.released_at %>)</li>
  <% end %>  
  </ul>
  <p>作詞：<%= info_arr[0].song.lyricist %></p>
  <p>作曲：<%= info_arr[0].song.composer %></p>
  <p>編曲：<%= info_arr[0].song.arranger %></p>
  <%= show_searchwords(params[:searchtype], info_arr, params['searchword']) %> 
  <% lyric_website_url = info_arr[0].song.lyric_urls[0].url %>
  <p>
    <%= info_arr[0].song.lyric_urls[0].lyric_website.name %>：
    <%= link_to lyric_website_url, lyric_website_url, target: :blank %>
  </p>
  <hr>
<% end %>
